<div class='container signup-container'>
    <div class='jumbotron matchy-jumbo'>

            <div class='row'>
                <div class='col-12'>
                    <p>Already have an account? <a href="/users/login">Log In</a></p>
                </div>
            </div>

        <div class="col-sm-6 col-sm-offset-3">

            <% if(message.length > 0) { %>
                <div class='alert alert-danger'><%= message %></div>
            <% } %>

            
                <h1>Signup</h1>
            
                <form action="/users/signup" method="post">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" name="name">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="password">
                    </div>
                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input type="password" class="form-control" name="passwordConfirmation">
                    </div>
                    <div class='row signup-signup'>
                        <div class='col-12'>
                            <button type="submit" class="btn btn-warning btn-lg">Signup</button>
                        </div>
                    </div>
                </form>
            
                <hr>
            
                <!-- If we choose to add in facebook sign up ability later -->
                <!-- <h2>Or Login With <a href="/auth/facebook" class="btn btn-primary btn-lg">Facebook</a></h2> -->
            
        </div>
        <div class='row signup-home'>
            <div class='col-12'>
                <a class="btn btn-light signup-home" href="/" role="button">Home</a>
            </div>
        </div>
    </div>
</div>